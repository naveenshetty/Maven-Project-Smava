<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="driverProvider" class="org.jbehave.web.selenium.FirefoxWebDriverProvider" >
    </bean>

    <bean id="webDriverProvider" class="org.jbehave.web.selenium.PerStoryWebDriverSteps">
        <constructor-arg ref="driverProvider"/>
    </bean>

    <bean id="lifecycleSteps" class="de.smava.int_test.steps.LifecycleSteps">
        <constructor-arg ref="driverProvider"/>
    </bean>

    <bean id="journaledSteps" class="de.smava.int_test.steps.JournaledStoriesSteps">
        <constructor-arg ref="driverProvider"/>
    </bean>

    <bean id="pageFactory" class="de.smava.int_test.pages.PageFactory">
        <constructor-arg ref="driverProvider"/>
    </bean>

    <bean id="steps" class="de.smava.int_test.steps.Steps">
        <constructor-arg ref="pageFactory"/>
    </bean>

</beans>